<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_logo"
    android:gravity="center|top"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/appName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="370dp"
        android:paddingBottom="70dp"
        android:text="Helping Hand"
        android:textAlignment="center"
        android:textSize="34sp" />

    <Button
        android:id="@+id/RegisterCounsellor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#8EAFD5"
        android:onClick="CounsellorLogin"
        android:text="Counsellor"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/RegisterPatient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#8EAFD5"
        android:onClick="PatientLogin"
        android:text="Patient"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Developers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="170dp"
        android:text="Developed by returnGroupName;"
        android:textAlignment="center"
        android:textColor="#455363" />

</LinearLayout>